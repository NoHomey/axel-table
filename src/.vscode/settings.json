{
    "C_Cpp.clang_format_path": "/usr/bin/clang",
    "clang.executable": "/usr/bin/clang",
    "clang.cxxflags": [
        "-std=c++14"
    ],
    "C_Cpp.autocomplete": "Default",
    "clang.completion.enable": true,
    "editor.fontSize": 18,
    "window.zoomLevel": 1,
    "[cpp]": {
        "editor.quickSuggestions": true
    },
    "[c]": {
        "editor.quickSuggestions": true
    },
    "workbench.colorTheme": "Atom One Dark",
    "editor.renderWhitespace": "none", 
    "files.associations": {
        "cstddef": "cpp",
        "array": "cpp",
        "initializer_list": "cpp",
        "utility": "cpp",
        "sstream": "cpp",
        "ostream": "cpp",
        "system_error": "cpp",
        "type_traits": "cpp",
        "tuple": "cpp",
        "exception": "cpp",
        "limits": "cpp",
        "iostream": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "istream": "cpp",
        "new": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "typeinfo": "cpp",
        "cmath": "cpp",
        "cfenv": "cpp",
        "*.htd": "cpp",
        "*.tci": "cpp",
        "*.mcrs": "cpp"
    }
}